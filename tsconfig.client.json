{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2020",
    "outDir": "public/assets",
    "rootDir": "src/client",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler",
    "composite": true,
    "resolveJsonModule": true,
    "lib": ["DOM", "ES2020"]
  },
  "include": [
    "src/client/**/*.ts",
    "src/client/**/*.tsx",
    "src/client/types/**/*.d.ts"
  ]
}
